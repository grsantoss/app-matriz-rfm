# Email (Amazon SES)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=your-ses-smtp-user
SMTP_PASSWORD=your-ses-smtp-password
EMAIL_FROM=no-reply@matrizrfm.com
EMAIL_FROM_NAME=Matriz RFM

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-1106-preview

# Server ports
PORT_FRONTEND=3000
PORT_BACKEND=5173
PORT_AUTH=3001
PORT_POSTGRES=5432
PORT_PGADMIN=5050
PORT_TRAEFIK=80

# PGAdmin
PGADMIN_DEFAULT_EMAIL=contato@matrizrfm.com
