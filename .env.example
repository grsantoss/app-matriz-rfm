# Environment
ENV=development
DEBUG=true

# Project
PROJECT_NAME=Matriz RFM

# Domains
DOMAIN_FRONTEND=app.matrizrfm.local
DOMAIN_BACKEND=api.matrizrfm.local
DOMAIN_PGADMIN=pgadmin.matrizrfm.local

# URLs
FRONTEND_URL=http://frontend:3000
BACKEND_URL=http://backend:5173
AUTH_SERVICE_URL=http://auth:3001

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=app_db
